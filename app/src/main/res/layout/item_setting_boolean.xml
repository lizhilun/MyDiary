<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/global_list_item_height"
    android:background="@drawable/bg_setting_item"
    android:paddingStart="@dimen/setting_item_padding_edge"
    android:paddingEnd="@dimen/setting_item_padding_edge">

    <skin.support.widget.SkinCompatTextView
        android:id="@+id/tv_boolean_setting_name"
        style="@style/GlobalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/global_content_padding_content"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_boolean_setting_checked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <skin.support.widget.SkinCompatImageView
        android:id="@+id/iv_boolean_setting_checked"
        android:layout_width="@dimen/global_check_btn_size"
        android:layout_height="@dimen/global_check_btn_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_button" />

</skin.support.constraint.SkinCompatConstraintLayout>